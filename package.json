{
  "name": "json-ptr-n11n-spec",
  "version": "1.0.0",
  "description": "Specification for JSON Pointer Normalization scheme",
  "scripts": {
    "prepare": "docker build -t markdown2rfc .",
    "build": "npm run build:markdown2rfc && npm run rename && npm run remove",
    "build:markdown2rfc": "docker run -v `pwd`:/data markdown2rfc spec.md",
    "rename": "mv draft-tmarkovski-json-ptr-n11n-latest.html index.html",
    "remove": "rm draft-tmarkovski-json-ptr-n11n-latest.xml"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trinsic-id/json-ptr-n11n-spec.git"
  },
