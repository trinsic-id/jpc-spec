{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "$schema": true,
    "label": { "type": "string", "description": "Test case name" },
    "input": {
      "type": ["array", "boolean", "number", "integer", "null", "string", "object"],
      "description": "Input JSON value"
    },
    "expected": { "type": "object", "description": "Expected JSON object in flattened format" },
    "throws": { "type": "boolean", "default": false, "description": "Indicates if this test should throw an error" }
  },
  "additionalProperties": false
}
